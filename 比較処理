function updateSheet() {
  var ss = SpreadsheetApp.getActiveSpreadsheet();
  var sheetA = ss.getSheetByName('Aシート(今月)');
  var sheetB = ss.getSheetByName('Bシート(先月)');

  var dataA = sheetA.getDataRange().getValues();
  var dataB = sheetB.getDataRange().getValues();

  var headerA = dataA[0];
  var idIndexA = headerA.indexOf('ID');
  var dateIndexA = headerA.indexOf('確認日');

  var headerB = dataB[0];
  var idIndexB = headerB.indexOf('ID');
  var dateIndexB = headerB.indexOf('確認日');

  for (var i = 1; i < dataA.length; i++) {
    var idA = dataA[i][idIndexA];
    var dateA = dataA[i][dateIndexA];
    var cellA = sheetA.getRange(i + 1, dateIndexA + 1);
    var noteA = cellA.getNote();

    for (var j = 1; j < dataB.length; j++) {
      var idB = dataB[j][idIndexB];
      var dateB = dataB[j][dateIndexB];

      if (idA === idB) {
        if (dateA === dateB) {
          // 日付が同じ場合、Bシートのメモをそのまま使用
          cellA.setNote(sheetB.getRange(j + 1, dateIndexB + 1).getNote());
        } else {
          // 日付が異なる場合、メモを更新
          var newDate = new Date(dateB);
          var yearMonth = Utilities.formatDate(newDate, 'Asia/Tokyo', 'yyyy/MM');
          var updatedNote = updateNote(noteA, yearMonth, dateB);
          cellA.setNote(updatedNote);
        }
        break;
      }
    }
  }
}

function updateNote(currentNote, newYearMonth, newDate) {
  var noteLines = currentNote.split('\n');
  var updatedLines = [`【${newYearMonth}】 ${newDate}`];
  
  for (var i = 0; i < noteLines.length; i++) {
    if (i < 2) { // 最新の3つのエントリーのみを保持
      updatedLines.push(noteLines[i]);
    } else {
      break;
    }
  }
  
  return updatedLines.join('\n');
}
