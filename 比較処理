function createTestData() {
  var ss = SpreadsheetApp.getActiveSpreadsheet();
  var sheetB = ss.getSheetByName('Bシート(先月)');

  addTestNotesToSheet(sheetB);
}

function addTestNotesToSheet(sheet) {
  var data = sheet.getDataRange().getValues();
  var header = data[0];
  var dateIndex = header.indexOf('確認');

  if (dateIndex === -1) {
    Logger.log('Bシートに「確認」列が見つかりません。');
    return;
  }

  for (var i = 1; i < data.length; i++) {
    var cell = sheet.getRange(i + 1, dateIndex + 1);
    cell.setNote("テスト");
  }
}
